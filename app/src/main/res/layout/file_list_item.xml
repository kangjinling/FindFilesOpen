<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    >
    <TextView
        android:id="@+id/file_list_item_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="@dimen/circleBgText"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:text="文件类型"
        android:maxLines="2"
        android:background="@drawable/circle_bg"/>

    <TextView
        android:id="@+id/file_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:maxLines="2"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/list_left"
        android:ellipsize="end"
        android:layout_weight="1"
        android:text="文件名称"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/file_list_item_checkImg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/checkbox_no"
        android:layout_gravity="center_vertical"/>

</LinearLayout>